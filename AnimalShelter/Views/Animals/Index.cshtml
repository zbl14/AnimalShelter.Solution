@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<div class="container">
  <div class="jumbotron text-center">
    <h1>Animals</h1>
  </div>


  @if (@Model.Count == 0)
  {
    <h3>No animals have been added yet!</h3>
  } 

  @foreach (Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Name}", "Details", new { id = animal.AnimalId }), @animal.Type, @animal.Date</li>
  }

  <p>@Html.ActionLink("Add new animal", "Create")</p>
</div>